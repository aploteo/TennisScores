<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="scoreboard_title_line">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/sb_small_width</item>
        <item name="android:layout_marginLeft">@dimen/sb_small_margin</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/sb_title_line_text_size</item>
    </style>

    <style name="scoreboard_lines_col1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sb_small_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:padding">@dimen/sb_lines_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_width">@dimen/sb_big_width</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="scoreboard_lines_col2_4">
        <item name="android:layout_width">@dimen/sb_small_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/sb_small_margin</item>
        <item name="android:layout_marginTop">@dimen/sb_small_margin</item>
        <item name="android:background">@color/sb_lighter_blue</item>
        <item name="android:padding">@dimen/sb_lines_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="scoreboard_lines_col5">
        <item name="android:layout_width">@dimen/sb_small_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/sb_small_margin</item>
        <item name="android:layout_marginTop">@dimen/sb_small_margin</item>
        <item name="android:background">@color/sb_darker_blue</item>
        <item name="android:padding">@dimen/sb_lines_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="scoreboard_lines_col6">
        <item name="android:layout_width">@dimen/sb_medium_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/sb_small_margin</item>
        <item name="android:layout_marginTop">@dimen/sb_small_margin</item>
        <item name="android:background">@color/buttonBlueBackground</item>
        <item name="android:padding">@dimen/sb_lines_padding</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/message</item>
        <item name="android:layout_marginTop">@dimen/score_buttons_margins_vertical</item>
        <item name="android:layout_marginBottom">@dimen/score_buttons_margins_vertical</item>
        <item name="android:layout_marginLeft">@dimen/score_buttons_margins_horizontal</item>
        <item name="android:layout_marginRight">@dimen/score_buttons_margins_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/buttonBlueBackground</item>
        <item name="android:padding">@dimen/score_buttons_padding</item>
    </style>
</resources>
